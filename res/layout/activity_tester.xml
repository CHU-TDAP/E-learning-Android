<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TesterActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/tester_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="24dp"
        android:text="Button" />

    <Button
        android:id="@+id/tester_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tester_btn1"
        android:layout_alignBottom="@+id/tester_btn1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="Button" />

    <Button
        android:id="@+id/tester_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tester_btn3"
        android:layout_alignBottom="@+id/tester_btn3"
        android:layout_centerHorizontal="true"
        android:text="Button" />

    <Button
        android:id="@+id/tester_send_addpeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tester_send_stop_all_send"
        android:text="加人數" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tester_send_stop_all_send"
        android:layout_alignRight="@+id/tester_btn3" />

    <Button
        android:id="@+id/tester_send_subpeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tester_send_stop_all_send"
        android:layout_toRightOf="@+id/tester_send_addpeople"
        android:text="減人數" />

    <Button
        android:id="@+id/tester_send_save_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tester_send_subpeople"
        android:layout_toRightOf="@+id/tester_send_subpeople"
        android:text="傳送已學完" />

    <Button
        android:id="@+id/tester_send_stop_all_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="中止所有傳送" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tester_send_addpeople"
        android:layout_below="@+id/tester_btn1"
        android:layout_marginTop="164dp"
        android:text="網路" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBar1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="42dp"
        android:text="SQLite" />

    <Button
        android:id="@+id/tester_sqlite_clear_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="清除user" />

    <Button
        android:id="@+id/tester_sqlite_clear_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tester_sqlite_clear_user"
        android:layout_alignBottom="@+id/tester_sqlite_clear_user"
        android:layout_toLeftOf="@+id/tester_btn3"
        android:text="清除target" />

</RelativeLayout>