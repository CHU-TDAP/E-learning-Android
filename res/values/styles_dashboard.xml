<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="Dashboard_Bottom_background">#D7E1E5</color>
    
    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dashboard_button_text</item>
        <item name="android:background">@null</item>
    </style>
    <style name="DashboardBottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/Dashboard_Bottom_background</item>
    </style>
    
</resources>